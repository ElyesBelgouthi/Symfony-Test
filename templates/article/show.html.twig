{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1 class="mt-4">Article</h1>
        <div class="card mt-4">
            <div class="card-body">
                <h2 class="card-title mb-3">{{ article.getTitre() }}</h2>
                <p class="card-text">{{ article.getContenu() }}</p>
                <div class="text-muted mt-4">
                    <p class="card-text">Par: {{ article.getAuteur().getNom() }} {{ article.getAuteur().getPrenom() }}</p>
                    <p class="card-text">Publi√© le: {{ article.getDateDeCreation() | date('d/m/Y') }}</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
